<Window x:Class="MyStoreWpfApp_EF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStoreWpfApp_EF"
        mc:Ignorable="d"
        Title="Dang nhap he thong" Height="450" Width="800">
    <Grid>
        <Label Content="Dang nhap he thong" HorizontalAlignment="Left" Margin="262,25,0,0" VerticalAlignment="Top" Height="42" Width="138">
            <Label.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Blue" Offset="0.0"></GradientStop>
                    <GradientStop Color="Red" Offset="0.5"></GradientStop>
                    <GradientStop Color="Yellow" Offset="1.0"></GradientStop>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="76,88,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="183,92,0,0" TextWrapping="Wrap" Text="admin@CompanyName.com" VerticalAlignment="Top" Width="176" TextChanged="TextBox_TextChanged"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="77,135,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.309,0.446"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="211,139,0,0" VerticalAlignment="Top" Width="120" Password="@1"/>
        <Button x:Name="btnDangnhap" Content="Dang nhap" HorizontalAlignment="Left" Margin="131,185,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="btnThoat" Content="Thoat" HorizontalAlignment="Left" Margin="271,185,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
