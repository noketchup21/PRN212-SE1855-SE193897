<Window x:Class="HelloWpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpfApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="101*"/>
            <RowDefinition Height="333*"/>
        </Grid.RowDefinitions>
        <Label Content="Man hinh dang nhap" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="2.085,-0.06" FontSize="24" Foreground="#FFF02222" Background="#FFB2E667"/>
        <Button x:Name="btnDangnhap" Content="Dang nhap" HorizontalAlignment="Left" Margin="261,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="42" Width="130" Click="Button_Click" FontSize="20"/>
        <Button x:Name="btnThoat" Content="Thoat" HorizontalAlignment="Left" Margin="447,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="41" Width="118" Click="Button_Click_1" FontSize="20"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="274,32,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="280,89,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="420,36,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="28"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="420,98,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120"/>


    </Grid>
</Window>
