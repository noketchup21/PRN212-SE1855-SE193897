<Window x:Class="WpfApp_EF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EF"
        mc:Ignorable="d"
        Title="Dang nhap he thong" Height="450" Width="800" FontFamily="Tahoma" FontSize="26" Background="#FFF5F5DC" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Dang nhap he thong" FontSize="30" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top"/>
        <Label Content="Email Address" FontSize="20" HorizontalAlignment="Left" Margin="94,146,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="280,155,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="253" Height="28"/>
        <Label Content="Password" FontSize="20" HorizontalAlignment="Left" Margin="94,0,0,0" VerticalAlignment="Center"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="280,0,0,0" VerticalAlignment="Center" Width="253" Height="37"/>
        <Button x:Name="bttnLogin" Content="Dang nhap" HorizontalAlignment="Left" Margin="140,275,0,0" VerticalAlignment="Top" Click="Button_Click" Height="38" Width="94"/>
        <Button x:Name="btnThoat" Content="Thoat" HorizontalAlignment="Left" Margin="459,274,0,0" VerticalAlignment="Top" Height="39" Width="74" Click="Button_Click_1"/>

    </Grid>
</Window>
